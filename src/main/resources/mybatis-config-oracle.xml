<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
        <!-- 값이 null인 컬럼 누락 방지 -->
		<setting name="callSettersOnNulls" value="true" />
	</settings>
	<typeAliases>
		<!-- MyBatis에서 resultType으로 hashmap 사용시 대문자로 반환하는 것을 소문자로 변환해주기 위한 클래스 -->
		<typeAlias alias="whashmap" type="com.lbrcrt.util.WHashMap"/>
		<!-- 하기는 하기 패키지에 있는 객체를 resulttype으로 사용하기 위해 추가 -->
		<!-- <package name="com.lbrcrt.domain"/> -->
	</typeAliases>
</configuration>
